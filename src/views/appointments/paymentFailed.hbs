<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  Swal.fire({
    icon: "error",
    title: "{{title}}",
    text: "{{#if message}}{{message}}{{else}}El pago fue cancelado o falló. Podés intentar nuevamente.{{/if}}",
    confirmButtonText: "Ir al inicio",
    allowOutsideClick: false
  }).then(() => {
    window.location.href = "/";
  });
</script>
<noscript>
  <h2>{{title}}</h2>
  <p>{{#if message}}{{message}}{{else}}El pago fue cancelado o falló. Podés intentar nuevamente.{{/if}}</p>
  <a href="/" class="btn">Volver al inicio</a>
</noscript>
