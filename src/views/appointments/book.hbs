<div class="page-header">
  <a href="/services/{{service._id}}" class="link-back">← Volver</a>
  <h2>Reservar turno</h2>
  <p class="muted">{{service.name}} · ⏱ {{#if service.duration}}{{service.duration}}{{else}}30{{/if}} min · $ {{service.price}}</p>
</div>

<form action="/appointments/process-payment" method="POST" class="form form-card">
  <input type="hidden" name="serviceId" id="serviceId" value="{{service._id}}">
  <input type="hidden" name="service" value="{{service.name}}">

  <div class="field">
    <label>Nombre y apellido</label>
    <input type="text" name="name" autocomplete="name" required>
  </div>

  <div class="field">
    <label>Teléfono (WhatsApp)</label>
    <input type="text" name="phone" inputmode="numeric" placeholder="Ej: 54911XXXXXXX" required>
    <small class="hint">Usá formato internacional sin “+” (ej: 549…)</small>
  </div>

  <div class="grid-2">
    <div class="field">
      <label>Fecha</label>
      <input type="date" name="date" id="datePicker" required>
    </div>

    <div class="field">
      <label>Horario</label>
      <select name="time" id="timeSelect" required>
        <option value="">Elegí un horario</option>
      </select>
      <small class="hint">De 07:00 a 21:00 (cada 30 min).</small>
    </div>
  </div>

  <button class="btn btn-full">Continuar al pago</button>
</form>
